    <script>
        // üî• GLOBAL VARIABLES
        let expenses = JSON.parse(localStorage.getItem('lensExpenses') || '[]');
        let monthlyIncome = parseFloat(localStorage.getItem('lensMonthlyIncome') || '10000');
        let monthlyBudget = parseFloat(localStorage.getItem('lensMonthlyBudget') || '4000');
        let dailyBudget = parseFloat(localStorage.getItem('lensDailyBudget') || '70');
        let isDarkMode = localStorage.getItem('lensDarkMode') === 'true';
        let activeTab = 'overview';
        
        // üî• CHART VARIABLES
        let dailySpendingInsightsChart = null;
        let currentInsightsPeriod = '30days';

        // üî• INITIALIZATION
        document.addEventListener('DOMContentLoaded', function() {
            initializeApp();
        });

        function initializeApp() {
            // Set today's date as default
            document.getElementById('expense-date').value = new Date().toISOString().split('T')[0];
            
            // Apply theme
            if (isDarkMode) {
                document.documentElement.classList.add('dark');
            }
            
            // Load settings
            loadSettings();
            
            // Update displays
            updateAllDisplays();
            
            console.log('‚úÖ Lens Finance App initialized successfully');
        }

        // üî• SETTINGS MANAGEMENT
        function loadSettings() {
            document.getElementById('monthly-income').value = monthlyIncome;
            document.getElementById('monthly-budget').value = monthlyBudget;
            document.getElementById('daily-budget').value = dailyBudget;
            
            updateInsightsLegendValues();
        }

        function updateSettings() {
            monthlyIncome = parseFloat(document.getElementById('monthly-income').value) || 10000;
            monthlyBudget = parseFloat(document.getElementById('monthly-budget').value) || 4000;
            dailyBudget = parseFloat(document.getElementById('daily-budget').value) || 70;
            
            // Save to localStorage
            localStorage.setItem('lensMonthlyIncome', monthlyIncome.toString());
            localStorage.setItem('lensMonthlyBudget', monthlyBudget.toString());
            localStorage.setItem('lensDailyBudget', dailyBudget.toString());
            
            // Update displays
            updateAllDisplays();
            updateDailySpendingInsightsChart();
            
            showAlert('Settings updated successfully!', 'info');
        }

        // üî• EXPENSE MANAGEMENT
        function addExpense() {
            const date = document.getElementById('expense-date').value;
            const amount = parseFloat(document.getElementById('expense-amount').value);
            const category = document.getElementById('expense-category').value;
            const description = document.getElementById('expense-description').value;

            if (!date || !amount || amount <= 0) {
                showAlert('Please enter a valid date and amount.', 'danger');
                return;
            }

            const expense = {
                id: Date.now(),
                date: date,
                amount: amount,
                category: category,
                description: description || `${category} expense`,
                timestamp: new Date().toISOString()
            };

            expenses.unshift(expense);
            saveExpenses();
            
            // Clear form
            document.getElementById('expense-amount').value = '';
            document.getElementById('expense-description').value = '';
            
            // Update displays
            updateAllDisplays();
            updateDailySpendingInsightsChart();
            checkBudgetAlerts(date, amount);
            
            showAlert(`Added ¬£${amount.toFixed(2)} expense successfully!`, 'info');
        }

        function deleteExpense(id) {
            if (confirm('Are you sure you want to delete this expense?')) {
                expenses = expenses.filter(e => e.id !== id);
                saveExpenses();
                updateAllDisplays();
                updateDailySpendingInsightsChart();
                showAlert('Expense deleted successfully!', 'info');
            }
        }

        function saveExpenses() {
            localStorage.setItem('lensExpenses', JSON.stringify(expenses));
        }

        // üî• DISPLAY UPDATES
        function updateAllDisplays() {
            updateStatsCards();
            updateExpensesTable();
            updateInsightsDisplay();
        }

        function updateStatsCards() {
            const today = new Date().toISOString().split('T')[0];
            const thisWeekStart = new Date();
            thisWeekStart.setDate(thisWeekStart.getDate() - 7);
            const thisMonthStart = new Date();
            thisMonthStart.setDate(1);

            // Calculate spending totals
            const todaySpending = expenses
                .filter(e => e.date === today)
                .reduce((sum, e) => sum + e.amount, 0);

            const weekSpending = expenses
                .filter(e => new Date(e.date) >= thisWeekStart)
                .reduce((sum, e) => sum + e.amount, 0);

            const monthSpending = expenses
                .filter(e => new Date(e.date) >= thisMonthStart)
                .reduce((sum, e) => sum + e.amount, 0);

            const budgetRemaining = monthlyBudget - monthSpending;

            // Update overview displays
            document.getElementById('today-spending').textContent = `¬£${todaySpending.toFixed(2)}`;
            document.getElementById('week-spending').textContent = `¬£${weekSpending.toFixed(2)}`;
            document.getElementById('month-spending').textContent = `¬£${monthSpending.toFixed(2)}`;
            document.getElementById('budget-remaining').textContent = `¬£${budgetRemaining.toFixed(2)}`;

            // Color coding for budget remaining
            const remainingEl = document.getElementById('budget-remaining');
            if (budgetRemaining < 0) {
                remainingEl.className = 'text-2xl font-bold mt-2 text-red-600';
            } else if (budgetRemaining < monthlyBudget * 0.2) {
                remainingEl.className = 'text-2xl font-bold mt-2 text-yellow-600';
            } else {
                remainingEl.className = 'text-2xl font-bold mt-2 text-green-600';
            }
        }

        function updateExpensesTable() {
            const tbody = document.getElementById('expenses-table');
            const allTbody = document.getElementById('all-expenses-table');
            
            if (expenses.length === 0) {
                const emptyRow = '<tr><td colspan="5" class="px-6 py-4 text-center text-gray-500">No expenses recorded yet.</td></tr>';
                tbody.innerHTML = emptyRow;
                allTbody.innerHTML = emptyRow;
                return;
            }

            const recentExpenses = expenses.slice(0, 10); // Show last 10
            const expenseRows = expenses.map(expense => `
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                    <td class="px-6 py-4 whitespace-nowrap">${new Date(expense.date).toLocaleDateString()}</td>
                    <td class="px-6 py-4 font-medium">¬£${expense.amount.toFixed(2)}</td>
                    <td class="px-6 py-4">${expense.category}</td>
                    <td class="px-6 py-4">${expense.description}</td>
                    <td class="px-6 py-4">
                        <button onclick="deleteExpense(${expense.id})" class="text-red-600 hover:text-red-800 font-medium">
                            Delete
                        </button>
                    </td>
                </tr>
            `).join('');

            tbody.innerHTML = recentExpenses.map(expense => `
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                    <td class="px-6 py-4 whitespace-nowrap">${new Date(expense.date).toLocaleDateString()}</td>
                    <td class="px-6 py-4 font-medium">¬£${expense.amount.toFixed(2)}</td>
                    <td class="px-6 py-4">${expense.category}</td>
                    <td class="px-6 py-4">${expense.description}</td>
                    <td class="px-6 py-4">
                        <button onclick="deleteExpense(${expense.id})" class="text-red-600 hover:text-red-800 font-medium">
                            Delete
                        </button>
                    </td>
                </tr>
            `).join('');

            allTbody.innerHTML = expenseRows;
        }

        function updateInsightsDisplay() {
            const thisMonthStart = new Date();
            thisMonthStart.setDate(1);
            const today = new Date().toISOString().split('T')[0];

            const monthSpending = expenses
                .filter(e => new Date(e.date) >= thisMonthStart)
                .reduce((sum, e) => sum + e.amount, 0);

            const todaySpending = expenses
                .filter(e => e.date === today)
                .reduce((sum, e) => sum + e.amount, 0);

            const budgetRemaining = monthlyBudget - monthSpending;
            const todayRemaining = dailyBudget - todaySpending;

            // Update insights metrics
            document.getElementById('insights-monthly-budget').textContent = `¬£${monthlyBudget.toFixed(0)}`;
            document.getElementById('insights-total-spent').textContent = `¬£${monthSpending.toFixed(2)}`;
            document.getElementById('insights-daily-budget').textContent = `¬£${dailyBudget.toFixed(0)}`;
            document.getElementById('insights-today-spent').textContent = `¬£${todaySpending.toFixed(2)}`;

            // Update secondary info
            const budgetVsIncome = monthlyIncome > 0 ? (monthlyBudget / monthlyIncome * 100).toFixed(0) : 0;
            const spentVsBudget = monthlyBudget > 0 ? (monthSpending / monthlyBudget * 100).toFixed(0) : 0;
            
            document.getElementById('budget-vs-income').textContent = `${budgetVsIncome}% of income`;
            document.getElementById('spent-vs-budget').textContent = `${spentVsBudget}% of budget`;
            document.getElementById('today-remaining').textContent = `¬£${Math.max(0, todayRemaining).toFixed(0)} remaining today`;

            updateInsightsLegendValues();
        }

        // üî• DAILY SPENDING INSIGHTS CHART - WORKING VERSION
        function initializeDailySpendingInsightsChart() {
            const ctx = document.getElementById('daily-spending-insights-chart');
            if (!ctx) {
                console.log('‚ùå Canvas element not found');
                return;
            }
            
            console.log('‚úÖ Initializing Daily Spending Insights Chart');
            
            // Destroy existing chart if it exists
            if (dailySpendingInsightsChart) {
                dailySpendingInsightsChart.destroy();
            }
            
            // Custom plugin for reference lines
            const insightsReferenceLinePlugin = {
                id: 'insightsReferenceLines',
                beforeDraw: (chart) => {
                    const { ctx, chartArea, scales } = chart;
                    const { top, bottom, left, right } = chartArea;
                    
                    ctx.save();
                    
                    // Daily budget line (yellow dashed)
                    if (dailyBudget > 0) {
                        const dailyY = scales.y.getPixelForValue(dailyBudget);
                        if (dailyY >= top && dailyY <= bottom) {
                            ctx.strokeStyle = '#f59e0b';
                            ctx.lineWidth = 2;
                            ctx.setLineDash([5, 5]);
                            ctx.beginPath();
                            ctx.moveTo(left, dailyY);
                            ctx.lineTo(right, dailyY);
                            ctx.stroke();
                        }
                    }
                    
                    // Monthly budget line (red dashed)
                    if (monthlyBudget > 0) {
                        const monthlyY = scales.y.getPixelForValue(monthlyBudget);
                        if (monthlyY >= top && monthlyY <= bottom) {
                            ctx.strokeStyle = '#ef4444';
                            ctx.lineWidth = 2;
                            ctx.setLineDash([10, 5]);
                            ctx.beginPath();
                            ctx.moveTo(left, monthlyY);
                            ctx.lineTo(right, monthlyY);
                            ctx.stroke();
                        }
                    }
                    
                    // Monthly income line (green dashed)
                    if (monthlyIncome > 0) {
                        const incomeY = scales.y.getPixelForValue(monthlyIncome);
                        if (incomeY >= top && incomeY <= bottom) {
                            ctx.strokeStyle = '#10b981';
                            ctx.lineWidth = 2;
                            ctx.setLineDash([15, 5]);
                            ctx.beginPath();
                            ctx.moveTo(left, incomeY);
                            ctx.lineTo(right, incomeY);
                            ctx.stroke();
                        }
                    }
                    
                    ctx.restore();
                }
            };
            
            // Register the plugin
            Chart.register(insightsReferenceLinePlugin);
            
            dailySpendingInsightsChart = new Chart(ctx, {
                type: 'scatter',
                data: {
                    datasets: [{
                        label: 'Daily Spending',
                        data: [],
                        backgroundColor: 'rgba(59, 130, 246, 0.6)',
                        borderColor: 'rgba(59, 130, 246, 1)',
                        borderWidth: 2,
                        pointRadius: 6,
                        pointHoverRadius: 8,
                        showLine: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        intersect: false,
                        mode: 'point'
                    },
                    scales: {
                        x: {
                            type: 'time',
                            time: {
                                unit: 'day',
                                displayFormats: {
                                    day: 'MMM dd'
                                }
                            },
                            title: {
                                display: true,
                                text: 'Date',
                                color: isDarkMode ? '#cbd5e1' : '#64748b'
                            },
                            grid: {
                                color: isDarkMode ? '#334155' : '#e2e8f0'
                            },
                            ticks: {
                                color: isDarkMode ? '#cbd5e1' : '#64748b'
                            }
                        },
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Amount (¬£)',
                                color: isDarkMode ? '#cbd5e1' : '#64748b'
                            },
                            grid: {
                                color: isDarkMode ? '#334155' : '#e2e8f0'
                            },
                            ticks: {
                                color: isDarkMode ? '#cbd5e1' : '#64748b',
                                callback: function(value) {
                                    return '¬£' + value.toFixed(0);
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: isDarkMode ? '#1a1d1f' : '#ffffff',
                            titleColor: isDarkMode ? '#f8f9fa' : '#0f1419',
                            bodyColor: isDarkMode ? '#cbd5e1' : '#64748b',
                            borderColor: isDarkMode ? '#334155' : '#e2e8f0',
                            borderWidth: 1,
                            callbacks: {
                                title: function(context) {
                                    const date = new Date(context[0].parsed.x);
                                    return date.toLocaleDateString('en-GB', { 
                                        weekday: 'long', 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    });
                                },
                                label: function(context) {
                                    return `Total spent: ¬£${context.parsed.y.toFixed(2)}`;
                                },
                                afterLabel: function(context) {
                                    const amount = context.parsed.y;
                                    const lines = [];
                                    
                                    // Add budget comparison
                                    if (amount > dailyBudget) {
                                        lines.push(`‚ö†Ô∏è Over daily budget by ¬£${(amount - dailyBudget).toFixed(2)}`);
                                    } else {
                                        lines.push(`‚úÖ Under daily budget by ¬£${(dailyBudget - amount).toFixed(2)}`);
                                    }
                                    
                                    if (amount > monthlyIncome) {
                                        lines.push(`üö® EXCEEDS MONTHLY INCOME!`);
                                    }
                                    
                                    return lines;
                                }
                            }
                        }
                    },
                    onHover: (event, activeElements) => {
                        event.native.target.style.cursor = activeElements.length > 0 ? 'pointer' : 'default';
                    }
                }
            });

            updateDailySpendingInsightsChart();
        }

        // Update the insights chart with real data
        function updateDailySpendingInsightsChart() {
            if (!dailySpendingInsightsChart) return;

            const chartData = getDailySpendingInsightsData();
            dailySpendingInsightsChart.data.datasets[0].data = chartData;
            dailySpendingInsightsChart.update('none');
            
            updateInsightsLegendValues();
        }

        // Get daily spending data for insights chart (uses your existing expenses array)
        function getDailySpendingInsightsData() {
            const days = currentInsightsPeriod === '7days' ? 7 : currentInsightsPeriod === '30days' ? 30 : 90;
            const endDate = new Date();
            const startDate = new Date();
            startDate.setDate(endDate.getDate() - days + 1);

            const dailyTotals = {};
            
            // Initialize all days with 0
            for (let d = new Date(startDate); d <= endDate; d.setDate(d.getDate() + 1)) {
                const dateStr = d.toISOString().split('T')[0];
                dailyTotals[dateStr] = 0;
            }

            // Aggregate expenses by date (sum multiple expenses per day into single value)
            expenses.forEach(expense => {
                const expenseDate = expense.date;
                if (dailyTotals.hasOwnProperty(expenseDate)) {
                    dailyTotals[expenseDate] += parseFloat(expense.amount) || 0;
                }
            });

            // Convert to chart data format
            return Object.entries(dailyTotals).map(([date, total]) => ({
                x: date,
                y: total
            }));
        }

        // Set chart period
        function setInsightsPeriod(period) {
            currentInsightsPeriod = period;
            
            // Update button states
            document.querySelectorAll('.period-toggle').forEach(btn => {
                btn.classList.remove('active');
            });
            const activeBtn = document.querySelector(`[data-period="${period}"]`);
            if (activeBtn) {
                activeBtn.classList.add('active');
            }
            
            updateDailySpendingInsightsChart();
        }

        // Update legend values
        function updateInsightsLegendValues() {
            const dailyElement = document.getElementById('insights-daily-budget-display');
            const monthlyElement = document.getElementById('insights-monthly-budget-display');
            const incomeElement = document.getElementById('insights-monthly-income-display');
            
            if (dailyElement) dailyElement.textContent = dailyBudget > 0 ? dailyBudget.toFixed(0) : '--';
            if (monthlyElement) monthlyElement.textContent = monthlyBudget > 0 ? monthlyBudget.toFixed(0) : '--';
            if (incomeElement) incomeElement.textContent = monthlyIncome > 0 ? monthlyIncome.toFixed(0) : '--';
        }

        // üî• TAB MANAGEMENT
        function showTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
                tab.classList.add('hidden');
            });
            
            // Remove active class from all tab buttons
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Show selected tab
            const selectedTab = document.getElementById(`${tabName}-tab`);
            const selectedButton = document.getElementById(`tab-${tabName}`);
            
            if (selectedTab && selectedButton) {
                selectedTab.classList.add('active');
                selectedTab.classList.remove('hidden');
                selectedTab.classList.add('fade-in');
                selectedButton.classList.add('active');
                activeTab = tabName;
                
                // Initialize insights chart when insights tab is opened
                if (tabName === 'insights') {
                    setTimeout(() => {
                        initializeDailySpendingInsightsChart();
                    }, 100);
                }
            }
        }

        // üî• BUDGET ALERTS
        function checkBudgetAlerts(date, amount) {
            const alerts = [];

            // Check daily budget
            const dayTotal = expenses
                .filter(e => e.date === date)
                .reduce((sum, e) => sum + e.amount, 0);

            if (dayTotal > dailyBudget) {
                alerts.push({
                    type: 'warning',
                    message: `‚ö†Ô∏è Daily spending (¬£${dayTotal.toFixed(2)}) has exceeded your daily budget of ¬£${dailyBudget.toFixed(2)}!`
                });
            }

            // Check if single expense exceeds monthly income
            if (amount > monthlyIncome) {
                alerts.push({
                    type: 'danger',
                    message: `üö® ALERT: This ¬£${amount.toFixed(2)} expense exceeds your entire monthly income of ¬£${monthlyIncome.toFixed(2)}!`
                });
            }

            // Check monthly budget
            const thisMonthStart = new Date();
            thisMonthStart.setDate(1);
            const monthTotal = expenses
                .filter(e => new Date(e.date) >= thisMonthStart)
                .reduce((sum, e) => sum + e.amount, 0);

            if (monthTotal > monthlyBudget) {
                alerts.push({
                    type: 'danger',
                    message: `üö® Monthly spending (¬£${monthTotal.toFixed(2)}) has exceeded your monthly budget of ¬£${monthlyBudget.toFixed(2)}!`
                });
            }

            // Show alerts
            alerts.forEach(alert => {
                showAlert(alert.message, alert.type);
            });
        }

        // üî• ALERT SYSTEM
        function showAlert(message, type = 'info') {
            const alertContainer = document.getElementById('alert-container');
            const alertId = 'alert-' + Date.now();
            
            const alertElement = document.createElement('div');
            alertElement.id = alertId;
            alertElement.className = `alert-banner alert-${type}`;
            alertElement.innerHTML = `
                <div class="flex justify-between items-center">
                    <span>${message}</span>
                    <button onclick="removeAlert('${alertId}')" class="text-current opacity-70 hover:opacity-100">‚úï</button>
                </div>
            `;
            
            alertContainer.appendChild(alertElement);
            
            // Auto-remove after 5 seconds
            setTimeout(() => {
                removeAlert(alertId);
            }, 5000);
        }

        function removeAlert(alertId) {
            const alert = document.getElementById(alertId);
            if (alert) {
                alert.style.opacity = '0';
                alert.style.transform = 'translateY(-10px)';
                setTimeout(() => {
                    alert.remove();
                }, 300);
            }
        }

        // üî• THEME MANAGEMENT
        function toggleTheme() {
            isDarkMode = !isDarkMode;
            document.documentElement.classList.toggle('dark');
            localStorage.setItem('lensDarkMode', isDarkMode.toString());
            
            // Update chart colors if chart exists
            if (dailySpendingInsightsChart) {
                const textColor = isDarkMode ? '#cbd5e1' : '#64748b';
                const gridColor = isDarkMode ? '#334155' : '#e2e8f0';
                
                dailySpendingInsightsChart.options.scales.x.title.color = textColor;
                dailySpendingInsightsChart.options.scales.x.grid.color = gridColor;
                dailySpendingInsightsChart.options.scales.x.ticks.color = textColor;
                dailySpendingInsightsChart.options.scales.y.title.color = textColor;
                dailySpendingInsightsChart.options.scales.y.grid.color = gridColor;
                dailySpendingInsightsChart.options.scales.y.ticks.color = textColor;
                
                dailySpendingInsightsChart.options.plugins.tooltip.backgroundColor = isDarkMode ? '#1a1d1f' : '#ffffff';
                dailySpendingInsightsChart.options.plugins.tooltip.titleColor = isDarkMode ? '#f8f9fa' : '#0f1419';
                dailySpendingInsightsChart.options.plugins.tooltip.bodyColor = isDarkMode ? '#cbd5e1' : '#64748b';
                dailySpendingInsightsChart.options.plugins.tooltip.borderColor = isDarkMode ? '#334155' : '#e2e8f0';
                
                dailySpendingInsightsChart.update('none');
            }
            
            showAlert(`Switched to ${isDarkMode ? 'dark' : 'light'} mode`, 'info');
        }

        // üî• DATA MANAGEMENT
        function exportData() {
            const data = {
                expenses,
                settings: {
                    monthlyIncome,
                    monthlyBudget,
                    dailyBudget
                },
                exported: new Date().toISOString()
            };
            
            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `lens-finance-data-${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            showAlert('Data exported successfully!', 'info');
        }

        function clearAllData() {
            if (confirm('Are you sure you want to clear all data? This action cannot be undone.')) {
                localStorage.clear();
                location.reload();
            }
        }

        // üî• SAMPLE DATA GENERATION
        function generateSampleData() {
            if (expenses.length > 0) {
                if (!confirm('This will add sample data to your existing expenses. Continue?')) {
                    return;
                }
            }

            const categories = ['Food/Drink', 'Transport', 'Entertainment', 'Shopping', 'Utilities'];
            const descriptions = {
                'Food/Drink': ['Coffee', 'Lunch', 'Groceries', 'Restaurant', 'Takeaway'],
                'Transport': ['Bus fare', 'Taxi', 'Fuel', 'Parking', 'Train ticket'],
                'Entertainment': ['Cinema', 'Concert', 'Streaming', 'Games', 'Books'],
                'Shopping': ['Clothes', 'Electronics', 'Home goods', 'Gifts', 'Personal care'],
                'Utilities': ['Electric bill', 'Gas bill', 'Internet', 'Phone bill', 'Water bill']
            };

            const sampleExpenses = [];
            const today = new Date();

            // Generate 30 days of sample data
            for (let i = 0; i < 30; i++) {
                const date = new Date(today);
                date.setDate(date.getDate() - i);
                const dateStr = date.toISOString().split('T')[0];

                // Random number of expenses per day (0-4)
                const expenseCount = Math.floor(Math.random() * 5);
                
                for (let j = 0; j < expenseCount; j++) {
                    const category = categories[Math.floor(Math.random() * categories.length)];
                    const descList = descriptions[category];
                    const description = descList[Math.floor(Math.random() * descList.length)];
                    
                    // Generate realistic amounts
                    let amount;
                    if (category === 'Food/Drink') {
                        amount = Math.random() * 25 + 2; // ¬£2-27
                    } else if (category === 'Transport') {
                        amount = Math.random() * 15 + 2; // ¬£2-17
                    } else if (category === 'Entertainment') {
                        amount = Math.random() * 50 + 5; // ¬£5-55
                    } else if (category === 'Shopping') {
                        amount = Math.random() * 100 + 10; // ¬£10-110
                    } else {
                        amount = Math.random() * 80 + 20; // ¬£20-100
                    }

                    sampleExpenses.push({
                        id: Date.now() + Math.random(),
                        date: dateStr,
                        amount: Math.round(amount * 100) / 100,
                        category: category,
                        description: description,
                        timestamp: new Date().toISOString()
                    });
                }
            }

            // Add some budget-breaking days
            const bigSpendingDay = new Date(today);
            bigSpendingDay.setDate(bigSpendingDay.getDate() - 5);
            sampleExpenses.push({
                id: Date.now() + Math.random(),
                date: bigSpendingDay.toISOString().split('T')[0],
                amount: 150.00,
                category: 'Shopping',
                description: 'Expensive purchase',
                timestamp: new Date().toISOString()
            });

            expenses = [...sampleExpenses, ...expenses];
            saveExpenses();
            updateAllDisplays();
            updateDailySpendingInsightsChart();
            
            showAlert(`Generated ${sampleExpenses.length} sample expenses!`, 'info');
        }

        // üî• KEYBOARD SHORTCUTS
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'e':
                        e.preventDefault();
                        document.getElementById('expense-amount').focus();
                        break;
                    case 'd':
                        e.preventDefault();
                        toggleTheme();
                        break;
                    case 's':
                        e.preventDefault();
                        if (e.shiftKey) {
                            exportData();
                        }
                        break;
                }
            }
        });

        // Auto-focus amount field when date is selected
        document.getElementById('expense-date').addEventListener('change', function() {
            document.getElementById('expense-amount').focus();
        });

        // Enter key to add expense
        document.getElementById('expense-amount').addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
                addExpense();
            }
        });

        console.log('üéØ Lens Finance App with Working Daily Spending Visualization Ready!');
        console.log('üìä Features: Daily spending chart, budget alerts, reference lines, dark mode');
        console.log('‚å®Ô∏è Shortcuts: Ctrl+E (add expense), Ctrl+D (toggle theme), Ctrl+Shift+S (export)');
    </script>
</body>
</html>
